<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:focusable="true">


    <TextView
        android:id="@+id/issueDetailsHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Issue Details"
        android:textAlignment="center"
        android:textSize="35sp"
        android:layout_marginTop="70dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_below="@+id/issueDetailsHeading"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:id="@+id/issueDetailsCard">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textName"
                android:layout_marginVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name: karthik"
                />

            <TextView
                android:id="@+id/textBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Block:"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/textFloor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Floor:"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/textDoorNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Door No:"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/textIssueType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Issue Type:" />

            <TextView
                android:id="@+id/textIssueDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Issue Description:"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/textRepeatedIssue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Repeated Issue:" />

            <TextView
                android:id="@+id/textWorkRequirement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Work Requirement:"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/textDateOfReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of Report:"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/textPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number:"
                android:layout_marginVertical="5dp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/displayImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/electrician"
            android:contentDescription="Issue Type" />
    </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:text="Next"
            android:id="@+id/takeToStaff"
            />
    </LinearLayout>


</RelativeLayout>