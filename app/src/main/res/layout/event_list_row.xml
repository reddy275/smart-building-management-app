<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    tools:ignore="MissingDefaultResource"
    android:id="@+id/card_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.7"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/issuerName"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Name: Prashanth"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/issueBlock"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Block: \t 2"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/issueFloor"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Floor: \t 2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/issueType"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Issue: \t 2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/issueDate"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Date: \t 02.12.2023"
            android:textSize="12sp" />

    </LinearLayout>
<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="0.3"
    android:layout_height="match_parent"
    android:layout_marginVertical="5dp"
    android:layout_marginEnd="5dp"
    android:orientation="vertical"
    android:gravity="center"
    >
    <TextView
        android:id="@+id/issueStatus"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: pending.." />

    <ImageView
        android:id="@+id/showIssue"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/show_issue"
        android:contentDescription="Show Issue"

        />
    <RatingBar
        android:id="@+id/overallRating"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="0.0"
        android:stepSize="1.0"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:visibility="gone"
        />


</LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>